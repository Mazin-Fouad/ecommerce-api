# Umgebungsvariablen für die E-Commerce API
# Kopiere diese Datei zu .env und fülle die Werte aus

# Server Konfiguration
PORT=3000
NODE_ENV=development
API_VERSION=1.0.0

# Datenbank Konfiguration
DB_NAME=ecommerce
DB_USER=root
DB_PASSWORD=mysecretpassword
DB_HOST=localhost
DB_PORT=3306

# JWT Konfiguration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Konfiguration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# E-Mail Konfiguration (für zukünftige Features)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@ecommerce-api.com

# Payment Gateway (für zukünftige Features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# File Upload
MAX_FILE_SIZE=10mb
UPLOAD_PATH=uploads/

# Redis (für Sessions/Caching - optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=